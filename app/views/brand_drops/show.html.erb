<p id="notice"><%= notice %></p>
<%= render 'layouts/navbar' %>

<div class="article-title-main">
    <h1><strong> <%= @brand_drop.article_title %> </strong> </h1>
</div>

<div class="article-overview-main">
    <h5> <%= @brand_drop.article_overview %> </h5>
</div>


<div class="article-image">
  <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">

  <div class="carousel-inner">
  <% if @brand_drop.article_image1.present? %>
  <div class="carousel-item active">
    <img class="d-block w-100" src=<%= @brand_drop.article_image1_url %> alt="First slide">
  </div>
  <% end %>
  <% if @brand_drop.article_image2.present? %>
    <div class="carousel-item">
      <img class="d-block w-100" src=<%= @brand_drop.article_image2_url %> alt="First slide">
    </div>
  <% end %>
  <% if @brand_drop.article_image3.present? %>
    <div class="carousel-item">
      <img class="d-block w-100" src=<%= @brand_drop.article_image3_url %> alt="First slide">
    </div>
  <% end %>
  <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
  </div>

</div>
</div>

<div class="article-content">
  <p> <%= @brand_drop.content.html_safe %> </p>
</div>


<h3 style="margin:10px">Comments</h3>

<% @brand_drop.comments.each do |comment| %> 
  <div class="comments">
    <h6>Comment by <%= comment.name %></h6>
    <p class="comment"><%= comment.content %></p>
    <hr>
  </div>
<%end%>






<%= render 'layouts/footer' %>