<div id="carouselExampleControls" class="carousel slide collab-media" data-ride="carousel">
  <div class="carousel-inner">
  <% count = 0 %>
  <% @brands.each do |brand| %>
    <% if count.modulo(3) == 0 %>
      <% if count == 0 %>
        <div class="carousel-item active">
      <% else %>
        <div class="carousel-item">
      <%end%>
        <div class="row">
          <div class="col-md-3"></div>
          <div class="col-md-2"><img class="d-block w-100 logo-company" src= <%= brand.image_url %> alt="First slide"></div>
    <% elsif count.modulo(3) == 2 %>
        <div class="col-md-2"><img class="d-block w-100 logo-company" src= <%= brand.image_url %> alt="First slide"></div>
        <div class="col-md-3"></div>
        </div>
        </div>
    <% else %>
        <div class="col-md-2"><img class="d-block w-100 logo-company" src= <%= brand.image_url %> alt="First slide"></div>
    <%end%>
    
    
    <% if brand.id == @brands.last.id and count.modulo(3) != 2 %>
      <div class="col-md-3"></div>
      </div>
      </div>
    <%end%>
    <% count = count + 1 %>
  <% end %>  
  </div>
  <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" ></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
    <span class="carousel-control-next-icon" ></span>
    <span class="sr-only">Next</span>
  </a>
</div>

