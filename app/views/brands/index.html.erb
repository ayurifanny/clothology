<p id="notice"><%= notice %></p>

<h1>Brands</h1>

<table>
  <thead>
    <tr>
      <th>Company</th>
      <th>Company name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Product type</th>
      <th>Product name</th>
      <th>Active</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @brands.each do |brand| %>
      <tr>
        <td><%= brand.company_id %></td>
        <td><%= brand.company_name %></td>
        <td><%= brand.email %></td>
        <td><%= brand.phone %></td>
        <td><%= brand.product_type %></td>
        <td><%= brand.product_name %></td>
        <td><%= brand.active %></td>
        <td><%= link_to 'Show', brand %></td>
        <td><%= link_to 'Edit', edit_brand_path(brand) %></td>
        <td><%= link_to 'Destroy', brand, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

